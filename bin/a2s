#!/usr/bin/env node
var fs = require('fs')
  , path = require('path')
  , optimist = require('optimist')
  , A2SRenderer = require('../lib/a2s')
  , argv = optimist.demand(1).argv
  , text = ''
  , renderer = new A2SRenderer(argv)

if (argv.help) {
  optimist.showHelp()
  process.exit()
}

// TODO: Support STDIN.
renderer.render({
  text: fs.readFileSync(path.resolve(process.cwd(), argv._[0]))
}, function (err, output) {
  if (err) {
    console.error(err.message || err)
    return
  }

  console.log(output)
})
